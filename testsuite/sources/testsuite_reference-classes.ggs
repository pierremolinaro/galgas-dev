final class @classeF : @classeC {
  private let @uint y
}

//-----------------------------------------------------------------------------------------------

final class @classeG : @classeC {
  private let @uint y = 67
}

//-----------------------------------------------------------------------------------------------

final class @classeH : @classeA {
  public let @uint y
  
  init (?let @uint inX, ?let @uint inY) {
    self.y = inY
    super.init (inX)
  }
}

//-----------------------------------------------------------------------------------------------

final class @classeI : @classeC {
  public let @uint y
  public weak var @classeH z = nil
  
  init (let @uint inY) {
    self.y = inY
    super.init ()
  }
}


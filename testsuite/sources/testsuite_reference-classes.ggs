class @classeC {
  public var @uint x = 7
}

//-----------------------------------------------------------------------------------------------

final class @classeD {
  public let @uint x = 9
  
  init (?let @uint inX) { self.x = inX }
  init (?x: let @uint inX) { self.x = inX }
}


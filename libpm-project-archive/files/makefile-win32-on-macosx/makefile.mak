#-----------------------------------------------------------------------------*
#                                                                             *
#  MAKEFILE for 32-bit command line tools for Win 32, built on Mac OS         *
#                                                                             *
#-----------------------------------------------------------------------------*

#-----------------------------------------------------------------------------*
#                                                                             *
#                               Executables                                   *
#                                                                             *
#-----------------------------------------------------------------------------*

EXECUTABLE := product.exe
EXECUTABLE_DEBUG := product_debug.exe

#-----------------------------------------------------------------------------*
#                                                                             *
#                         Object files directories                            *
#                                                                             *
#-----------------------------------------------------------------------------*

OBJECTS_DIR       := objects
DEBUG_OBJECTS_DIR := debug_objects

#-----------------------------------------------------------------------------*
#                                                                             *
#                  Install directory (for "install" goal)                     *
#                                                                             *
#-----------------------------------------------------------------------------*

INSTALL_DIR := /usr/local/bin

#-----------------------------------------------------------------------------*
#                                                                             *
#                       Link Options for i386 Linux                           *
#                                                                             *
#-----------------------------------------------------------------------------*

PLATFORM_LINKER_OPTIONS := -lcomdlg32 -lws2_32

#-----------------------------------------------------------------------------*

USER_COMMAND_LINE_OPTIONS :=
SOURCES_DIR :=
SOURCES :=

#-----------------------------------------------------------------------------*
#                                                                             *
#                        Include user files                                   *
#                                                                             *
#-----------------------------------------------------------------------------*

include ../sources/project-file-list.mak

#-----------------------------------------------------------------------------*
#                                                                             *
#                        Include libpm files                                  *
#                                                                             *
#-----------------------------------------------------------------------------*

include ../libpm/libpm-file-list.mak

#-----------------------------------------------------------------------------*
#                                                                             *
#                  Include Win 32 tools for MAC OS X                          *
#                                                                             *
#-----------------------------------------------------------------------------*

include ../libpm/included_makefiles/mingw_on_macosx_gcc_tools_32.mak

#-----------------------------------------------------------------------------*
#                                                                             *
#                Include makefile that performs actual work                   *
#                                                                             *
#-----------------------------------------------------------------------------*

include ../libpm/included_makefiles/generic-makefile.mak


#------------------------------------------------------------------------------*

#--- LIBPM directory
LIBPM_DIRECTORY_PATH := %!LIBPM_DIRECTORY_PATH%

#------------------------------------------------------------------------------*
#                                                                              *
#     Project source files directories                                         *
#                                                                              *
#------------------------------------------------------------------------------*

SOURCES_DIR := ../build/output
SOURCES_DIR += ../build/user-headers
SOURCES_DIR += $(LIBPM_DIRECTORY_PATH)
%foreach HAND_CODED_SOURCE_DIR_SET do
  %SOURCES_DIR += %!key%\n%
end
%
#------------------------------------------------------------------------------*
#                                                                              *
#     Source files names list (without their actual path)                      *
#                                                                              *
#------------------------------------------------------------------------------*

SOURCES :=

#--- Galgas 2 -----------------------------------------------------------------*
SOURCES += all-galgas.cpp

#--- Files from LIBPM ---------------------------------------------------------*
SOURCES += all-libpm.cpp

#--- Files generated by GALGAS ------------------------------------------------*
%
foreach MAKEFILE_FILE_LIST do
  %SOURCES += %!mValue%\n%
end
%
#--- Hand-coded files ---------------------------------------------------------*
%
foreach HAND_CODED_SOURCE_FILE_LIST do
  %SOURCES += %!mValue%\n%
end
%

#------------------------------------------------------------------------------*
#                                                                              *
#     Link                                                                     *
#                                                                              *
#------------------------------------------------------------------------------*

USER_LINK_OPTIONS :=
%foreach TOOL_LINK_LIST do
%USER_LINK_OPTIONS += %!mValue%\n%
end%

#------------------------------------------------------------------------------*
#                                                                              *
#     Command line options                                                     *
#                                                                              *
#------------------------------------------------------------------------------*

USER_COMMAND_LINE_OPTIONS :=
USER_COMMAND_LINE_OPTIONS += -DLIBPM_MULTI_THREADING=%!MULTI_THREADING_ENABLED%

#------------------------------------------------------------------------------*

lexique labelled_sample_scanner :#--- Identifiers $identifier$ error message "an identifier" ;  rule 'a'->'z' | 'A'->'Z' :    send $identifier$ ;  end rule ;#--- Delimitors  list delimitorsList error message "the '%' delimitor" :    "+",    "*",     "(",      ")" ;  rule list delimitorsList ;#--- separators  rule '\1' -> ' ' :  end rule ;end lexique ;#-----------------------------------------------------------------------------syntax labelled_sample_parser :import lexique labelled_sample_scanner ;rule <expression>label autre;rule <term> ;rule <factor> ;rule <follow_term>label autre;rule <expression> :  <term> ;  <follow_term> ;label autre :  <term>;  <follow_term> autre  ;end rule ;rule <follow_term> :  $+$ ;  <term> ;  <follow_term> ;label autre :  $+$ ;  <term> ;  <follow_term> autre ;end rule ;rule <follow_term> :label autre :end rule ;rule <term> :  <factor> ;  repeat  while    $*$ ;    <factor> ;   end repeat ;end rule ;rule <factor> :  select    $($ ; <expression> ; $)$ ;  or    $identifier$ ;  end select ;end rule ;end syntax ;#--------------------------------------------------------------------------------*grammar labelled_sample_grammar "SLR" :  import lexique labelled_sample_scanner ;  import syntax labelled_sample_parser ;  start <expression> ;end grammar ;#--------------------------------------------------------------------------------*
#---------------------------------------------------------------*
#                                                               *
# MAKEFILE for building galgas LL1, SLR, LR1 command line tools *
#                                                               *
#---------------------------------------------------------------*

all:
	$(MAKE) -f makefile64_LL1 all
	$(MAKE) -f makefile64_SLR all
	$(MAKE) -f makefile64_LR1 all

#---------------------------------------------------------------*

clean:
	$(MAKE) -f makefile64_LL1 clean
	$(MAKE) -f makefile64_SLR clean
	$(MAKE) -f makefile64_LR1 clean

#---------------------------------------------------------------*

install:
	$(MAKE) -f makefile64_LL1 install
	$(MAKE) -f makefile64_SLR install
	$(MAKE) -f makefile64_LR1 install

#---------------------------------------------------------------*

uninstall:
	$(MAKE) -f makefile64_LL1 uninstall
	$(MAKE) -f makefile64_SLR uninstall
	$(MAKE) -f makefile64_LR1 uninstall

#---------------------------------------------------------------*


#                                                                           *
#---------------------------------------------------------------------------*

#---------------------------------------------------------------------------*
#                                                                           *
#                               Executables                                 *
#                                                                           *
#---------------------------------------------------------------------------*

EXECUTABLE := class_sample_language.exe
EXECUTABLE_DEBUG := class_sample_language_debug.exe

#---------------------------------------------------------------------------*
#                                                                           *
#                         Object files directories                          *
#                                                                           *
#---------------------------------------------------------------------------*

OBJECTS_DIR       := objects
DEBUG_OBJECTS_DIR := debug_objects

#---------------------------------------------------------------------------*
#                                                                           *
#                         Linker Options for Win32                          *
#                                                                           *
#---------------------------------------------------------------------------*

PLATFORM_LINKER_OPTIONS := -lcomdlg32

#---------------------------------------------------------------------------*
#                                                                           *
#                        Include Common Definitions                         *
#                                                                           *
#---------------------------------------------------------------------------*

include ../common_files_for_make/makefile.mke

#---------------------------------------------------------------------------*
#                                                                           *
#                       Include MinGW tools for MSYS                        *
#                                                                           *
#---------------------------------------------------------------------------*

include $(LIB_PM_PATH)/included_makefiles/msys_on_win32.mke

#---------------------------------------------------------------------------*
#                                                                           *
#                Include makefile that performs actual work                 *
#                                                                           *
#---------------------------------------------------------------------------*

include $(LIB_PM_PATH)/included_makefiles/generic_makefile.mke


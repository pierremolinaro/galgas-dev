

abstract valueclass @expressionAST {
}

valueclass @varInExpressionAST : @expressionAST {
  @lstring mVarName
}

valueclass @cstInExpressionAST : @expressionAST {
  @luint mConstant
}

valueclass @additionAST : @expressionAST {
  @expressionAST mLeftExpression
  @expressionAST mRightExpression
}

valueclass @multiplicationAST : @expressionAST {
  @expressionAST mLeftExpression
  @expressionAST mRightExpression
}

abstract valueclass @instructionAST {
}

list @instructionListAST {
  @instructionAST mInstruction
}

valueclass @assignmentAST : @instructionAST {
  @lstring mTargetVarName
  @expressionAST mSourceExpression
}

struct @programAST {
  @instructionListAST mProgramInstructionList
  @location mEndOfSourceFile
}

valueclass @varDeclarationAST : @instructionAST {
  @lstring mVarName
}

valueclass @printVariableAST : @instructionAST {
  @lstring mVarName
}




abstract refclass @expressionAST {
}

refclass @varInExpressionAST : @expressionAST {
  @lstring mVarName
}

refclass @cstInExpressionAST : @expressionAST {
  @luint mConstant
}

refclass @additionAST : @expressionAST {
  @expressionAST mLeftExpression
  @expressionAST mRightExpression
}

refclass @multiplicationAST : @expressionAST {
  @expressionAST mLeftExpression
  @expressionAST mRightExpression
}

abstract refclass @instructionAST {
}

list @instructionListAST {
  @instructionAST mInstruction
}

refclass @assignmentAST : @instructionAST {
  @lstring mTargetVarName
  @expressionAST mSourceExpression
}

struct @programAST {
  @instructionListAST mProgramInstructionList
  @location mEndOfSourceFile
}

refclass @varDeclarationAST : @instructionAST {
  @lstring mVarName
}

refclass @printVariableAST : @instructionAST {
  @lstring mVarName
}


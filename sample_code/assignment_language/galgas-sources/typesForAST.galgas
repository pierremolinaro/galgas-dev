

abstract shared class @expressionAST {
}

shared class @varInExpressionAST : @expressionAST {
  @lstring mVarName
}

shared class @cstInExpressionAST : @expressionAST {
  @luint mConstant
}

shared class @additionAST : @expressionAST {
  @expressionAST mLeftExpression
  @expressionAST mRightExpression
}

shared class @multiplicationAST : @expressionAST {
  @expressionAST mLeftExpression
  @expressionAST mRightExpression
}

abstract shared class @instructionAST {
}

list @instructionListAST {
  @instructionAST mInstruction
}

shared class @assignmentAST : @instructionAST {
  @lstring mTargetVarName
  @expressionAST mSourceExpression
}

struct @programAST {
  @instructionListAST mProgramInstructionList
  @location mEndOfSourceFile
}

shared class @varDeclarationAST : @instructionAST {
  @lstring mVarName
}

shared class @printVariableAST : @instructionAST {
  @lstring mVarName
}


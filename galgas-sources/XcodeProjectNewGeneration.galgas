  private @XCodeAppTargetList mAppTargetList
  private @2stringlist mCppFileList
  private @2stringlist m_M_FileList
  private @2stringlist m_MM_FileList
  private @2stringlist mFrameworkFileList
  private @2stringlist mHeaderFileList
  private @BuildFileList mBuildFileList
#--- Default configuration
  private @string mDefaultConfigurationRef
  private @stringlist mDefaultConfigurationSettingList
  private @string mProjectBuildConfigurationRef
#--- Resource files
  private @2stringlist mInfoPlistFileList
  private @2stringlist mXIB_fileList
  private @2stringlist mTIFF_fileList
  private @2stringlist mICNS_fileList
}


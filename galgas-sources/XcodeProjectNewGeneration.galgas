setter @XcodeProjectDescriptor getReferenceKey
  !ref:@string outRef {
  if mProjectObjectReference == "" then
    mProjectObjectReference = [[[mSequenceNumber string] md5] rightSubString!24]
    mSequenceNumber ++
  end
  outRef = [[[mSequenceNumber string] md5] rightSubString!24]
  mSequenceNumber ++
}


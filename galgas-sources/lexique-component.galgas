  #--- Enable indexing ?
    let @lstring indexingDirectory
    select
      indexingDirectory = ["" nowhere]
    or
      $indexing$
      $in$
      $"string"$ ? indexingDirectory
    end
    ${$
  #--- Parse lexique body
    var @templateDelimitorListAST templateDelimitorList = {}
    var @templateReplacementListAST templateReplacementList = {}

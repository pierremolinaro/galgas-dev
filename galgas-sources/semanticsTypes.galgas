enum @typeKindEnum {
  case classType (@bool isShared)
  case enumType 
  case listType 
  case sortedListType 
  case mapType 
  case uniqueMapType 
  case mapProxyType 
  case listMapType 
  case boolsetType 
  case structType 
  case graphType 
  case externType 
  case arrayType 
  case predefinedType
}

#———————————————————————————————————————————————————————————————————————————————————————————————————————————————————————

getter @typeKindEnum kind -> @string {
  switch self
    case classType (*) : result = "class"
    case enumType : result = "enumeration"
    case listType : result = "list"
    case sortedListType : result = "sorted list"
    case mapType : result = "map"
    case uniqueMapType : result = "unique map"
    case mapProxyType : result = "map proxy"
    case listMapType : result = "list map"
    case structType : result = "struct"
    case boolsetType : result = "boolset"
    case graphType : result = "graph"
    case predefinedType : result = "predefined"
    case arrayType : result = "array"
    case externType : result = "extern"
  end
}


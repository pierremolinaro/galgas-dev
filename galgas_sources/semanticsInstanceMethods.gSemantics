semantics semanticsInstanceMethods :
import "semanticsModifiers.gSemantics" ;
import semantics semanticsModifiers in "semanticsModifiers.gSemantics" ;

#---------------------------------------------------------------------------*

reader @ACGalgasType instanceMethodMap ->@modifierMapEXX outModifierMap :
  outModifierMap := [@modifierMapEXX emptyMap] ;
end reader ;

#---------------------------------------------------------------------------*

once instanceMethodMapFor_data ->@modifierMapEXX outModifierMap :
  outModifierMap := [@modifierMapEXX emptyMap] ;
  enterModifierWithStringInputArgument !?outModifierMap !"writeToFile" !true ;
end once ;

#---------------------------------------------------------------------------*

override reader @dataGalgasType instanceMethodMap ->@modifierMapEXX outModifierMap :
  outModifierMap := instanceMethodMapFor_data [] ;
end reader ;

#---------------------------------------------------------------------------*

once instanceMethodMapFor_string ->@modifierMapEXX outModifierMap :
  outModifierMap := [@modifierMapEXX emptyMap] ;
  enterModifierWithStringInputArgument !?outModifierMap !"writeToFile" !true ;
  enterModifierWithStringInputArgument !?outModifierMap !"writeToExecutableFile" !true ;
  enterModifierWithStringInputArgument !?outModifierMap !"makeDirectoryAndWriteToFile" !true ;
  enterModifierWithoutArgument !?outModifierMap !"makeDirectory" !true ;
  @formalParameterSignatureEXX argList [emptyList] ;
  argList += ![@stringGalgasType new] ![@formalArgumentPassingModeAST argumentConstantIn] ;
  argList += ![@boolGalgasType new] ![@formalArgumentPassingModeAST argumentOut] ;
  [!?outModifierMap insertKey
    ![@lstring new !"writeToFileWhenDifferentContents" !here]
    !argList
    !true
  ] ;
end once ;

#---------------------------------------------------------------------------*

override reader @stringGalgasType instanceMethodMap ->@modifierMapEXX outModifierMap :
  outModifierMap := instanceMethodMapFor_string [] ;
end reader ;

#---------------------------------------------------------------------------*

end semantics ;

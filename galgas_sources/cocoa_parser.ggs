   <parse_grammar_component_for_importing> parse ;
  end select ;
  $;$ ;
  <get_lexical_parser_name> parse ;
  $end$ ;
  $cocoa$ ;
  $;$ ;
label importGrammarForSemantics
  ?!@M_grammarComponents unused ioGrammarComponentsMap
:
  $cocoa$ ;
  $identifier$ ? * ;
  $:$ ;
#--- Command line tool
  $program$ ;
  $literal_string$ ? * ;
  $;$ ;
  $import$ ;
  $grammar$ ;
  $identifier$ ? * ;
  select
  or
   $in$ ;
   $literal_string$ ? * ;
   <parse_grammar_component_for_importing> parse ;
  end select ;
  $;$ ;
  <get_lexical_parser_name> parse ;
  $end$ ;
  $cocoa$ ;
  $;$ ;
label importOptions
  ?!@M_optionComponents unused ioOptionsComponentsMap
:
  $cocoa$ ;
  $identifier$ ? * ;
  $:$ ;
#--- Command line tool
  $program$ ;
  $literal_string$ ? * ;
  $;$ ;
  $import$ ;
  $grammar$ ;
  $identifier$ ? * ;
  select
  or
   $in$ ;
   $literal_string$ ? * ;
   <parse_grammar_component_for_importing> parse ;
  end select ;
  $;$ ;
  <get_lexical_parser_name> parse ;
  $end$ ;
  $cocoa$ ;
  $;$ ;
end rule ;

#--------------------------------------------------------------------------------*

end syntax ;
